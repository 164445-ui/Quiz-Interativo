        // Fun√ß√£o para copiar o link para a √°rea de transfer√™ncia
        function copyLink(event) {
            // Previne a navega√ß√£o se for um clique no √¢ncora
            if (event) event.preventDefault();

            const placeholderText = "https://quiz-miaunel.com/meu-link-exclusivo";
            const copyMessage = document.getElementById('copy-message');

            try {
                // Tenta usar o comando execCommand para garantir compatibilidade em iframes
                const input = document.createElement('textarea');
                input.value = placeholderText;
                document.body.appendChild(input);
                input.select();
                document.execCommand('copy');
                document.body.removeChild(input);

                copyMessage.textContent = 'Link copiado!';
                copyMessage.classList.remove('hidden');
                setTimeout(() => copyMessage.classList.add('hidden'), 2000);
            } catch (err) {
                console.error('Falha ao copiar:', err);
                copyMessage.textContent = 'Falha ao copiar o link. Por favor, copie manualmente.';
                copyMessage.classList.remove('hidden');
                setTimeout(() => copyMessage.classList.add('hidden'), 3000);
            }
        }

