                {
                    q: "A Mam√£e Miaunel dividiu 50 bolinhas de l√£ igualmente entre seus 5 filhotes. Quantas bolinhas de l√£ cada filhote recebeu?",
                    materia: "Matem√°tica",
                    options: ["5 bolinhas", "10 bolinhas", "15 bolinhas", "250 bolinhas"],
                    correct: "10 bolinhas",
                    miaunel_intro: "Hora da divis√£o justa! Se for igual, √© divis√£o. Qual o resultado de 50 / 5?",
                    miaunel_success: "Brilhante! 50 / 5 = 10. Todos os filhotes ficam felizes e voc√™ ganha pontos!",
                    miaunel_fail: "N√£o foi justo! O correto √© 10 bolinhas por filhote (50 / 5). Estude a divis√£o, pelos de Gato!",
                }
            ];

            let currentQuestionIndex = 0;
            let score = 0;
            let gameFinished = false;

            const questionElement = document.getElementById('current-question');
            const materiaTag = document.getElementById('materia-tag');
            const optionsContainer = document.getElementById('options-container');
            const scoreElement = document.getElementById('score');
            const statusElement = document.getElementById('question-status');
            const miaunelDialogue = document.getElementById('miaunel-dialogue');
            const miaunelEmoji = document.getElementById('miaunel-emoji');
            const nextButton = document.getElementById('next-button');

            // Fun√ß√£o principal para carregar a pergunta
            function loadQuestion() {
                if (currentQuestionIndex >= quizData.length) {
                    finishGame();
                    return;
                }

                const currentQuestion = quizData[currentQuestionIndex];
                
                // Atualiza a interface
                statusElement.textContent = `Pergunta ${currentQuestionIndex + 1}/${quizData.length}`;
                scoreElement.textContent = `Pontos: ${score}`;
                questionElement.textContent = currentQuestion.q;
                materiaTag.textContent = currentQuestion.materia;
                miaunelDialogue.textContent = currentQuestion.miaunel_intro;
                miaunelEmoji.textContent = catEmoji; // Emoji padr√£o
                miaunelEmoji.classList.add('bounce-animation');
                nextButton.classList.add('hidden');
                optionsContainer.classList.remove('disabled');
                
                // Cria os bot√µes de op√ß√£o
                optionsContainer.innerHTML = '';
                currentQuestion.options.forEach(option => {
                    const button = document.createElement('button');
                    button.textContent = option;
                    button.className = 'option-button w-full text-left p-3 border-2 border-gray-300 rounded-lg text-gray-800 font-medium bg-white hover:bg-gray-50';
                    button.onclick = () => checkAnswer(option, currentQuestion);
                    optionsContainer.appendChild(button);
                });
            }

            // Fun√ß√£o para verificar a resposta
            function checkAnswer(selectedOption, question) {
                if (gameFinished) return;

                optionsContainer.classList.add('disabled'); // Desabilita mais cliques
                miaunelEmoji.classList.remove('bounce-animation');
                nextButton.classList.remove('hidden');

                const optionButtons = optionsContainer.querySelectorAll('.option-button');
                let isCorrect = false;

                optionButtons.forEach(button => {
                    if (button.textContent === question.correct) {
                        button.classList.add('correct-answer');
                    }
                    if (button.textContent === selectedOption) {
                        if (selectedOption === question.correct) {
                            isCorrect = true;
                        } else {
                            button.classList.add('wrong-answer');
                        }
                    }
                });

                if (isCorrect) {
                    score += 10;
                    miaunelDialogue.textContent = question.miaunel_success;
                    miaunelEmoji.textContent = catHappyEmoji;
                } else {
                    miaunelDialogue.textContent = question.miaunel_fail;
                    miaunelEmoji.textContent = catAngryEmoji;
                }
                scoreElement.textContent = `Pontos: ${score}`;
            }

            // Fun√ß√£o para carregar a pr√≥xima pergunta
            function loadNextQuestion() {
                if (currentQuestionIndex < quizData.length) {
                    currentQuestionIndex++;
                    loadQuestion();
                }
            }

            // Fun√ß√£o de finaliza√ß√£o do jogo
            function finishGame() {
                gameFinished = true;
                optionsContainer.innerHTML = '';
                nextButton.classList.add('hidden');

                let finalMessage = "";
                let finalEmoji = catEmoji;

                if (score === 100) {
                    finalMessage = `Uau! Nota m√°xima! üíØ Voc√™ √© o MESTRE do Ensino Fundamental. O Professor Miaunel est√° orgulhoso (e impressionado)!`;
                    finalEmoji = catHappyEmoji;
                } else if (score >= 70) {
                    finalMessage = `Bom trabalho! üí™ Sua pontua√ß√£o de ${score} mostra que voc√™ tem um √≥timo dom√≠nio dos assuntos.`;
                    finalEmoji = catEmoji;
                } else {
                    finalMessage = `Precisa estudar mais! üòø Sua pontua√ß√£o de ${score} n√£o me agrada. Volte aos seus livros e tente novamente. Miau!`;
                    finalEmoji = catAngryEmoji;
                }

                questionElement.textContent = `FIM DO QUIZ! Sua pontua√ß√£o final foi de ${score} pontos.`;
                materiaTag.textContent = 'Resultado Final';
                miaunelDialogue.textContent = finalMessage;
                miaunelEmoji.textContent = finalEmoji;
                miaunelEmoji.classList.remove('bounce-animation');
            }

            // Inicia o jogo
            loadQuestion();
            window.loadNextQuestion = loadNextQuestion; // Exporta para o bot√£o HTML
            window.copyLink = copyLink; // Exporta a fun√ß√£o de c√≥pia
        });
    </script>

